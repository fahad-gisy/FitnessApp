<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/DarkThem"
    android:layout_height="match_parent"
    tools:context=".Result">



    <TextView
        android:id="@+id/bmiResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Result"
        android:layout_margin="12dp"
        android:textAlignment="center"
        android:background="@drawable/shape_customs"
        android:textColor="@color/white"
        android:textSize="45dp"
        android:layout_marginTop="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="الكتلة = "
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:textSize="40sp"
        android:textColor="@color/blue"
        app:layout_constraintBottom_toBottomOf="@+id/bmiResult"
        app:layout_constraintStart_toStartOf="@+id/bmiResult"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgVr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_customs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bmiResult" />



</androidx.constraintlayout.widget.ConstraintLayout>